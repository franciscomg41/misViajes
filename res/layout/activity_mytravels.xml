<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.itsa.equipo4.misviajes.MyTravels" >

	<TextView
	    android:id="@+id/textViewNumberOfTravels"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignBottom="@+id/buttonNewTravel"
	    android:layout_alignTop="@+id/buttonNewTravel"
	    android:layout_toRightOf="@+id/buttonNewTravel"
	    android:gravity="center_vertical"
	    android:text="Bienvenido"
	    android:textSize="@dimen/activity_fontsize_users" />
	
	<Button
        android:id="@+id/buttonNewTravel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+" />
	
	<ListView
		android:id="@+id/listMyTravels"
		android:layout_below="@+id/textViewNumberOfTravels"
		android:layout_height="wrap_content"
		android:layout_width="match_parent">
	</ListView>
	
</RelativeLayout>