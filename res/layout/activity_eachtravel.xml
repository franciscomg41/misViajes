<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" 
	android:layout_width="match_parent" 
	android:layout_height="match_parent">

<RelativeLayout 
    android:nextFocusDown="@+id/TextViewNombre"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.itsa.equipo4.misviajes.NewTravel" >

    <TextView
        android:id="@+id/TextViewNombre"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:textSize="@dimen/activity_fontsize_forms" >
        
        <requestFocus />
    </TextView>
    
    <TextView
        android:id="@+id/TextViewOrigen"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/TextViewNombre"
        android:ems="10"
        android:textSize="@dimen/activity_fontsize_forms" >

    </TextView>
    
    <TextView
        android:id="@+id/TextViewDestino"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/TextViewOrigen"
        android:ems="10"
        android:textSize="@dimen/activity_fontsize_forms" >

    </TextView>
    
    <TextView
        android:id="@+id/TextViewFechaInicial"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/TextViewDestino"
        android:ems="10"
        android:textSize="@dimen/activity_fontsize_forms" >
    
    </TextView>
    
    <TextView
        android:id="@+id/TextViewFechaFinal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/TextViewFechaInicial"
        android:ems="10"
        android:textSize="@dimen/activity_fontsize_forms" >

    </TextView>
    
   <TextView
        android:id="@+id/TextViewTransporte"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/TextViewFechaFinal"
        android:ems="10"
        android:textSize="@dimen/activity_fontsize_forms" >

    </TextView>
    
   <TextView
        android:id="@+id/TextViewCosto"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/TextViewTransporte"
        android:ems="10"
        android:textSize="@dimen/activity_fontsize_forms" >

    </TextView>
    
    <Button
        android:id="@+id/buttonModTravel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TextViewCosto"
        android:layout_marginTop="10dp"
        android:text="@string/button_updtravel" />

    <Button
        android:id="@+id/buttonDelTravel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonModTravel"
        android:layout_marginTop="10dp"
        android:text="@string/button_deltravel" />

</RelativeLayout>
</ScrollView>